@page "/"
@using Nonna.Web.Models
@inject HttpClient Http

<PageTitle>Home</PageTitle>

@if (recipeIndex == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <MudGrid>
        @foreach (var index in recipeIndex.Index)
        {
            <MudItem xs="12" sm="6" md="3">
                <MudCard>
                    <MudCardMedia Image="@($"recipes/{index.Path}/{index.Image}")"/>
                    <MudCardContent>
                        <MudText Typo="Typo.h5">@index.Title</MudText>
                        <MudText Typo="Typo.body2">@index.Description</MudText>
                    </MudCardContent>
                    <MudCardActions>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Share</MudButton>
                        <MudButton Variant="Variant.Text" Color="Color.Primary">Learn More</MudButton>
                    </MudCardActions>
                </MudCard>
            </MudItem>
        }
    </MudGrid>
}

@code {
    private RecipeIndex recipeIndex;

    protected override async Task OnInitializedAsync()
    {
        recipeIndex = await Http.GetFromJsonAsync<RecipeIndex>("recipes/index.json");
    }
}
